#!/bin/bash

# load common code
DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
. $DIR/gitcommon

StashedChanged=0

stageUncommittedChanges

getlatest
case $? in
	0)	cleanup
		echo.
		echo !!!!!!!!!!!!!!!!!!!
		echo Grabbed the latest.
		echo !!!!!!!!!!!!!!!!!!!
		;;
	1)  echo.
		echo !!!!!!!!!!!!!!!!
		echo Found conflicts.
		echo !!!!!!!!!!!!!!!!
		exit 1
		;;
	2)  cleanup
		echo.
		echo !!!!!!!!!!!!!!!!!!!!!!!
		echo Failed to fetch latest.
		echo !!!!!!!!!!!!!!!!!!!!!!!
		exit 2
		;;
	esac

